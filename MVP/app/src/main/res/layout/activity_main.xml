<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/input_editor_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter here"
        android:layout_marginTop="16sp"/>

    <Button
        android:id="@+id/set_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/input_editor_view"
        android:text="Display TEXT BELOW " />

    <TextView
        android:id="@+id/display_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="NULL"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_below="@id/set_value"/>

    <Button
        android:id="@+id/login_but"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:layout_below="@id/display_msg"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/device_info_but"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DEVICE INFO"
        android:layout_below="@id/login_but" />

</RelativeLayout>